<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTextStyle">
        ...
        <item name="fontFamily">@font/be_vietnam_regular</item>
        ...
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/xamChu</item>
        <item name="android:editTextColor">@color/xamChu</item>
        <item name="android:textColorHint">@color/xamChu</item>
        <item name="fontFamily">@font/be_vietnam_regular</item>
    </style>


    <!-- Popup menu Style -->
    <style name="PopUpCustomStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the title and text -->
        <item name="android:textColor">@color/black</item>
        <!-- Used for the background -->
        <item name="fontFamily">@font/be_vietnam_regular</item>
    </style>

<!--    Style Chung-->
    <style name="buttonYellow">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/be_vietnam_medium</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>
    <style name="buttonLongYellow">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/be_vietnam_medium</item>
        <item name="android:background">@drawable/custom_button</item>

    </style>

    <style name="inputStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/custom_edt</item>
        <item name="fontFamily">@font/be_vietnam_light</item>
        <item name="android:textColorHint">@color/xamChu</item>
        <item name="android:drawableTint">@color/blackUI</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColor">@color/xamChu</item>
    </style>

    <style name="inputStylePhone">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/custom_edt</item>
        <item name="fontFamily">@font/be_vietnam_light</item>
        <item name="android:textColorHint">@color/xamChu</item>
        <item name="android:drawableTint">@color/blackUI</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/xamChu</item>
    </style>

    <style name="errorInputStyle">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/be_vietnam_medium</item>
    </style>

    <style name="imageViewComback">
        <item name="android:src">@drawable/ic_arror_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16sp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--    text Style Login-->
    <style name="out_BigHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/fjalla_one_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="layout_constraintVertical_bias">0.1</item>

    </style>


    <!--    text Style Homepage-->
    <style name="in_SmallHeaderText">
        <item name="fontFamily">@font/be_vietnam_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="in_BigHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/fjalla_one_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="in_setting_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="fontFamily">@font/be_vietnam_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="in_setting_imv">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@drawable/spin_custom</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="in_setting_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/xamNen</item>
        <item name="fontFamily">@font/be_vietnam_medium</item>
        <item name="android:paddingStart">32sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingEnd">32sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textColor">@color/blackUI</item>
        <item name="android:textSize">18sp</item>
    </style>


<!--    textStyleDialog-->
    <style name="dialog_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/fjalla_one_regular</item>
        <item name="android:textSize">24.5sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/custom_button_dialog</item>
        <item name="fontFamily">font/be_vietnam_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="dialog_button.long" >
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="fontFamily">font/be_vietnam_medium</item>

    </style>


    <style name="dialog_button.small">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="fontFamily">font/be_vietnam_medium</item>

    </style>
    <style name="dialog_button.small.cancel">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/custom_button_dialog_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">font/be_vietnam_medium</item>

    </style>

    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/be_vietnam_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">15sp</item>
    </style>

<!--    Bottom sheet style-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--    Custom Slider-->
    <style name="CustomSlider" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        ...
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/primary_yellow</item>
    </style>




    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        ...
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorOnPrimary">@color/primary_yellow</item>
        <item name="colorOnSurface">@color/primary_yellow</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/primary_yellow</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/be_vietnam_regular</item>
        <item name="android:fontFamily">@font/be_vietnam_regular</item>
    </style>





</resources>