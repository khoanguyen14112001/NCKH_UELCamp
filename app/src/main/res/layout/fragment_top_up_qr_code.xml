<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.TopUpQRCodeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:id="@+id/lnText1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/space"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_regular"
                android:text="@string/_27_oct_2021_23_20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/amount_2cham"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/space"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/txtAmount"
                android:fontFamily="@font/be_vietnam_regular"
                android:text="50.000 VND"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_regular"
                android:text="@string/please_payment_within"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/space"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_yellow"
                android:textSize="16sp"
                android:id="@+id/txtTimeMomo"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/_240s"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/lnText1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.075"
        android:src="@drawable/img_qrcode_momo"
        android:id="@+id/imvQRmomo"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:text="@string/save_qr_cde"
        app:layout_constraintTop_toBottomOf="@id/imvQRmomo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1"
        style="@style/buttonYellow"
        android:id="@+id/btnSaveQRCode"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnSaveQRCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTransaction"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/transaction_code"
            android:textSize="16sp"
            android:paddingTop="6dp"
            android:fontFamily="@font/be_vietnam_regular"
            android:paddingBottom="6dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            app:layout_constraintTop_toTopOf="@id/txtTransaction"
            app:layout_constraintBottom_toBottomOf="@id/txtTransaction"
            app:layout_constraintLeft_toRightOf="@id/txtTransaction"
            android:text="@string/cb07"
            android:textSize="20sp"
            android:fontFamily="@font/fjalla_one_regular"
            android:background="@drawable/button_black_activities"
            android:textColor="@color/white"
            android:id="@+id/txtTransactionCode"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_copy"
            app:layout_constraintLeft_toRightOf="@id/txtTransactionCode"
            app:layout_constraintTop_toTopOf="@id/txtTransactionCode"
            app:layout_constraintBottom_toBottomOf="@id/txtTransactionCode"
            android:layout_marginStart="10dp"


            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtTransaction"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/please_enter_the_correct"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_code_cap"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="in the"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/message"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:textColor="@color/primary_yellow"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_when_making_transactions_at"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/space"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Momo"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:textColor="@color/purple_momo"
                    android:textSize="11sp"
                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>