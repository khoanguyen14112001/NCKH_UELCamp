<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/xamNen"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_marginVertical="3dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/layout_problem"
    android:layout_height="wrap_content">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/txtDetailProTrans"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@id/imvImage"
        android:layout_marginEnd="15dp"
        android:maxLines="3"
        android:fontFamily="@font/be_vietnam_light"
        android:text="I want to cancel the wrong top up"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/imvImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>