<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.OnBoardingScreen">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        android:id="@+id/gVer"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12"
        android:id="@+id/gVerLeft"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"
        android:id="@+id/gVerRight"
        />




    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gVer"
        android:src="@drawable/img_school"
        android:adjustViewBounds="true"
        android:id="@+id/imgUEL"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/oval_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="-130dp"
        android:layout_marginBottom="-175dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/imgUEL"
        app:layout_constraintLeft_toLeftOf="@id/gVerLeft"
        android:orientation="vertical"
        android:layout_marginTop="-15dp"
        app:layout_constraintRight_toRightOf="@id/gVerRight">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uel_camp"
            android:fontFamily="@font/fjalla_one_regular"
            android:textColor="@color/primary_yellow"
            android:textSize="50sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_is_a_payment_application_only_for_uel_s_student"
            android:textColor="@color/black"
            android:fontFamily="@font/be_vietnam_light"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonYellow"
            android:layout_marginTop="30dp"
            android:text="@string/get_started"
            android:id="@+id/btnGetStarted"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>