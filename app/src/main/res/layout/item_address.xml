<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="20dp"
    android:background="@color/xamNen"
    android:id="@+id/layout_item_address"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/in_SmallHeaderText"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:text="@string/ho_ng"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtNameAddress"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/txtNameAddress"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/layout_default_address"
            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_red"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imvCheckRed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/imvCheckRed"
                android:text="@string/default_address"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:textColor="@color/red"
                android:fontFamily="@font/be_vietnam_regular"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/be_vietnam_regular"
            android:textColor="@color/xamChu"
            android:id="@+id/txtText1"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=" Room A.707 - Court A, University of Economics and Law"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/be_vietnam_regular"
            android:layout_marginStart="3dp"
            android:id="@+id/txtLocationAddress"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/txtText1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_2cham"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/be_vietnam_regular"
            android:textColor="@color/xamChu"
            android:id="@+id/txtText2"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="0943782999"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/be_vietnam_regular"
            android:layout_marginStart="3dp"
            android:id="@+id/txtPhoneAddress"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/txtText2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>