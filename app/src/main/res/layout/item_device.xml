<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:id="@+id/layout_devices">

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/xamNen"
        android:id="@+id/view"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/imvDevice"
        android:src="@drawable/img_iphone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imvDevice"
        app:layout_constraintTop_toTopOf="@id/imvDevice"
        app:layout_constraintBottom_toBottomOf="@id/imvDevice">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iphone_8_plus"
            android:id="@+id/txtNameDevice"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/be_vietnam_semibold"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ios"
                android:fontFamily="@font/be_vietnam_light"
                android:textColor="@color/xamChu"
                android:id="@+id/txtBrandDevice"
                android:gravity="center_vertical"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/space"
                android:fontFamily="@font/be_vietnam_light"
                android:textColor="@color/xamChu"
                android:gravity="center_vertical"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/currently_using"
                android:fontFamily="@font/be_vietnam_light"
                android:textColor="@color/xamChu"
                android:gravity="center_vertical"
                android:id="@+id/txtCurrentlyUsedDevice"
                android:textSize="12sp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastOperate"
            android:text="@string/last_operating_time"
            android:fontFamily="@font/be_vietnam_medium"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wednesday_dec_01_2021_at_00_04_37_in_thu_duc_hcmc"
            android:fontFamily="@font/be_vietnam_light"
            android:textColor="@color/black"
            android:id="@+id/txtStatusDevice"
            android:textSize="10sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imvSignout"
        android:src="@drawable/ic_signoutitem"
        app:layout_constraintTop_toTopOf="@id/layout"
        app:layout_constraintRight_toRightOf="@id/layout"
        android:padding="3dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>