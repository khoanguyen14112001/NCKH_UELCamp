<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:id="@+id/layout_member">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/layout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_avatar_female"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imvAvatarMember"

            />
        <View
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:background="@drawable/button_login"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:id="@+id/view"
            android:layout_marginTop="75dp"/>

        <TextView
            android:id="@+id/txtCareerMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:paddingEnd="7dp"
            android:paddingBottom="5dp"
            android:text="Business Analyst"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintLeft_toLeftOf="@id/view"
            app:layout_constraintRight_toRightOf="@id/view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:maxLines="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Vo Thi Tuyet Trinh"
        android:textColor="@color/black"
        android:fontFamily="@font/be_vietnam_semibold"
        android:textSize="11sp"
        android:lineSpacingExtra="-4dp"
        android:id="@+id/txtNameMember"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNameMember"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Leader"
        android:textColor="@color/primary_yellow"
        android:fontFamily="@font/be_vietnam_regular"
        android:textSize="11sp"
        android:id="@+id/txtRoleMember"/>


</androidx.constraintlayout.widget.ConstraintLayout>