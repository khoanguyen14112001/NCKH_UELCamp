<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".home.SLSpace.OrderSLSpaceScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imvOpenNav"
            style="@style/imageViewOpenNav"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            style="@style/imageViewComback"
            android:id="@+id/imvBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/in_BigHeaderText"
            android:id="@+id/txtHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/order"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_container_show_order"
            app:layout_constraintTop_toBottomOf="@id/txtHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp"
                android:id="@+id/consTop"
                android:background="@color/xamNen"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/layout_choose_address"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imvLocation"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_location"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imvLocation"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/be_vietnam_regular"
                            android:text="@string/location"
                            android:textColor="@color/black"
                            android:focusable="true"
                            android:focusedByDefault="true"
                            android:focusableInTouchMode="true"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_canteen"
                            android:textColor="@color/black"
                            android:id="@+id/txtChooseYourAddress"
                            android:fontFamily="@font/be_vietnam_medium"
                            android:textSize="13sp" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/buttonYellow.Small"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/btnChangeAddress"
                    android:text="@string/change"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                app:layout_constraintTop_toBottomOf="@id/consTop"
                android:background="@color/xamChu"
                android:id="@+id/viewSep"
                />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/consTop"
                app:layout_constraintBottom_toTopOf="@id/layout_bottom"
                android:layout_height="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="20dp"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/xamNen"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/rcvItemOrder" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rcvItemOrder"
                        android:paddingVertical="15dp"
                        android:paddingHorizontal="20dp"
                        android:id="@+id/layout_need"
                        android:background="@color/xamNen">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/in_SmallHeaderText"
                                android:textSize="14sp"
                                android:text="@string/need_anything_else"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/be_vietnam_light"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:text="@string/add_other_dishes_if_you_want"/>
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            style="@style/buttonYellow.Small"
                            android:id="@+id/btnAddMore"
                            android:text="@string/add_more"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_need"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/xamNen"
                        app:cardCornerRadius="9dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/layout_discount"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="9dp"
                            android:id="@+id/layout_voucher"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_order_discount"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:id="@+id/imvGift"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                style="@style/in_SmallHeaderText"
                                android:text="You have 1 discount applied"
                                android:textSize="14sp"
                                android:paddingHorizontal="10dp"
                                app:layout_constraintRight_toLeftOf="@id/imvArrow"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/imvGift"
                                />
                            <ImageView
                                android:layout_width="10dp"
                                android:id="@+id/imvArrow"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"/>


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_discount"
                        android:layout_marginHorizontal="20dp"
                        android:backgroundTint="@color/xamNen"
                        app:cardCornerRadius="9dp"
                        android:layout_marginTop="10dp"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingVertical="9dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/in_SmallHeaderText"
                                android:textSize="13sp"
                                android:paddingHorizontal="20dp"
                                android:text="@string/payment_summary"/>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:paddingHorizontal="20dp"

                                android:layout_marginLeft="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:fontFamily="@font/be_vietnam_regular"
                                    android:textColor="@color/black"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />
                                <TextView
                                    style="@style/VNDStyle"
                                    android:id="@+id/txtVND1"
                                    android:textSize="11sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/txtTotalNoDiscount"
                                    />

                                <TextView
                                    style="@style/PriceStyle"
                                    android:id="@+id/txtTotalNoDiscount"
                                    android:text="30.000"
                                    android:textSize="18sp"
                                    android:layout_marginEnd="3dp"
                                    app:layout_constraintRight_toLeftOf="@id/txtVND1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dp"
                                android:paddingHorizontal="20dp"

                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/discounts"
                                    android:fontFamily="@font/be_vietnam_regular"
                                    android:textColor="@color/black"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />
                                <TextView
                                    style="@style/VNDStyle"
                                    android:id="@+id/txtVND3"
                                    android:textSize="11sp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/txtDiscount"
                                    />

                                <TextView
                                    style="@style/PriceStyle"
                                    android:id="@+id/txtDiscount"
                                    android:text="30.000"
                                    android:layout_marginEnd="3dp"
                                    android:textSize="18sp"
                                    app:layout_constraintRight_toLeftOf="@id/txtVND3"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.75dp"
                                android:background="@color/xamChu"
                                android:layout_marginVertical="10dp"
                                />
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/in_SmallHeaderText"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:text="@string/payment_summary"/>
                                <TextView
                                    style="@style/VNDStyle"
                                    android:id="@+id/txtVND4"
                                    android:layout_marginEnd="20dp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBaseline_toBaselineOf="@id/txtPaymentSummary"
                                    />

                                <TextView
                                    style="@style/PriceStyle"
                                    android:id="@+id/txtPaymentSummary"
                                    android:text="30.000 "
                                    app:layout_constraintRight_toLeftOf="@id/txtVND4"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/in_SmallHeaderText"
                                    android:textSize="13sp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    android:text="@string/payment_method"/>


                                <TextView
                                    style="@style/PriceStyle"
                                    android:text="@string/uel_camp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    android:layout_marginEnd="20dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="70dp"
                android:id="@+id/layout_bottom"

                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="15dp"
                    android:layout_height="120dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_payment"
                            style="@style/in_SmallHeaderText"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/txtTotal"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30.000"
                            style="@style/PriceStyle"
                            app:layout_constraintRight_toLeftOf="@id/txtVND"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/txtTotalPayment"
                            app:layout_constraintBaseline_toBaselineOf="@id/txtTotal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            android:id="@+id/txtVND"
                            app:layout_constraintBaseline_toBaselineOf="@id/txtTotal"
                            style="@style/VNDStyle"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/buttonYellow"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginBottom="20dp"
                        android:text="@string/order"
                        android:id="@+id/btnOrder"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_complete_order"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtHeader"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="300dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                android:src="@drawable/img_completed_order"
                android:adjustViewBounds="true"
                android:id="@+id/imvCompleteOrder"
                />
            <LinearLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@id/imvCompleteOrder"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/layout_text"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_have_order_successfully"
                    android:fontFamily="@font/fjalla_one_regular"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/be_vietnam_light"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/our_staff_is_preparing_your_order_please_wait_a_second"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                style="@style/buttonYellow"
                app:layout_constraintTop_toBottomOf="@id/layout_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/go_to_purchases"
                android:id="@+id/btnGoToPurchase"
                />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/buttonYellow"
                android:backgroundTint="@color/blackUI"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/btnGoToPurchase"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:text="@string/back_to_home"
                android:id="@+id/btnBackToHome"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:id="@+id/navLeftView"
        app:itemTextAppearance="@style/FontLeftNavViewStyle"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layoutFragmentLeftNav"/>

        </ScrollView>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>