<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.homepage.HomeFragment"
    android:background="@color/xamNen">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnInfo"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_avatar_female"
            android:id="@+id/imvInsideAvatar"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_light"
                android:textColor="@color/xamChu"
                android:id="@+id/txtHello"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/be_vietnam_semibold"
                android:text="@string/heo"
                android:textColor="@color/black"
                android:id="@+id/txtNameDisplayUser"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:id="@+id/imvNoteBell"
                android:src="@drawable/ic_notice_bell"/>
        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/lnInfo"
        android:layout_marginTop="10dp"
        android:id="@+id/lnMoney"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            app:cardBackgroundColor="#EBE9E7"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtMoneyDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/big_shoulder_display_bold"
                    android:text="150.000"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtVND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_light"
                    android:paddingLeft="8dp"
                    android:text="@string/vnd"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/txtMoneyDisplay"
                    app:layout_constraintLeft_toRightOf="@id/txtMoneyDisplay"

                    />


                <TextView
                    android:id="@+id/txtYourBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_light"
                    android:text="@string/your_balance"
                    android:textColor="@color/blackUI"
                    android:textSize="13sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtVND" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_momo"
                    app:layout_constraintBottom_toBottomOf="@+id/txtYourBalance"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txtMoneyDisplay" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lnMoney"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintVertical_bias="0.4"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_login_shadow"
                app:layout_constraintLeft_toLeftOf="@id/btnParking"
                />
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/custom_button"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imbParkingLot"
                app:layout_constraintLeft_toLeftOf="@id/btnParking"/>


            <LinearLayout
                android:id="@+id/btnParking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_constraintEnd_toStartOf="@+id/btnCanteen"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_parking"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:text="@string/parking_lot_cap"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textColor="@color/blackUI"
               />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_login_shadow"
                app:layout_constraintLeft_toLeftOf="@id/btnCanteen"
                />
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/imbCanteen"
                android:background="@drawable/custom_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/btnCanteen"/>

            <LinearLayout
                android:id="@+id/btnCanteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnParking"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_canteen"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:text="@string/canteen_cap"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textColor="@color/blackUI"
              />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/ctn1">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_login_shadow"
                app:layout_constraintLeft_toLeftOf="@id/btnCafe"
                />

            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/custom_button"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imbQuanCafe"
                app:layout_constraintLeft_toLeftOf="@id/btnCafe"/>

            <LinearLayout
                android:id="@+id/btnCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/btnThuQuan"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingTop="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:scaleType="fitCenter"

                    android:src="@drawable/ic_quancafe"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:textSize="11.5sp"
                    android:paddingHorizontal="10dp"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:text="Startup &amp; language space"
                    android:textAllCaps="true"
                    android:lineSpacingExtra="-5dp"
                    android:textColor="@color/blackUI" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_login_shadow"
                app:layout_constraintLeft_toLeftOf="@id/btnThuQuan"
                />
            <ImageButton
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/custom_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/btnThuQuan"/>

            <LinearLayout
                android:id="@+id/btnThuQuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnCafe"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_thuquan"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_semibold"
                    android:text="STATIONERY"
                    android:textAlignment="center"
                    android:textColor="@color/blackUI"
                   />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>