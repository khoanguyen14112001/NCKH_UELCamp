<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:layout_marginStart="-2dp"
    android:layout_marginEnd="-2dp"
    android:id="@+id/layout_drink_cate_option"
    android:background="@drawable/layout_custom_stroke_black_top_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="0% ice"
        android:fontFamily="@font/be_vietnam_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/txtDrinkLevelOption"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_rad_yellow_unchecked"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/imvChooseDrinkOptionStatus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        app:layout_constraintRight_toLeftOf="@id/imvChooseDrinkOptionStatus"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:id="@+id/txtDrinkPriceOption"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/be_vietnam_semibold"/>






</androidx.constraintlayout.widget.ConstraintLayout>