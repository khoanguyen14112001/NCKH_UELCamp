<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.EditInfomationScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/focus_thiefResetPassScreen"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"
            android:id="@+id/gLeft7"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"
            android:id="@+id/gRight7"/>

        <ImageView
            style="@style/imageViewComback"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/imvComebackEditInfo"/>
        <TextView
            style="@style/in_BigHeaderText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtPersonalInformation"
            android:text="@string/my_profile"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/img_avatar_female"
            app:layout_constraintTop_toBottomOf="@id/txtPersonalInformation"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/imvAvatarEditInfo"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/imvAvatarEditInfo"
            app:layout_constraintRight_toRightOf="@id/imvAvatarEditInfo"
            android:src="@drawable/ic_camera"
            android:layout_marginRight="15dp"
            android:id="@+id/imvCameraEditInfo"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtNameEditInfo"
            android:text="@string/heo"
            style="@style/in_SmallHeaderText"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/imvAvatarEditInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login"
            android:fontFamily="@font/be_vietnam_regular"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/student"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/edtNameEditInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/txtStudentEditInfo"
            android:textSize="14sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:id="@+id/radioGroupGioiTinh"
            android:gravity="center"
            app:layout_constraintVertical_bias="0.02"
            app:layout_constraintTop_toBottomOf="@id/txtStudentEditInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textColor="@color/xamChu"
                android:button="@drawable/custom_radio"
                android:paddingLeft="7dp"
                android:id="@+id/radFemaleEditInfor"
                android:checked="true"
                android:fontFamily="@font/be_vietnam_light"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/custom_radio"
                android:id="@+id/radMaleEditInfor"
                android:paddingLeft="7dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/xamChu"
                android:fontFamily="@font/be_vietnam_light"
                android:text="@string/male"/>
        </RadioGroup>
        <TextView
            style="@style/inputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtDateOfBirthEditInfo"
            android:hint="@string/date_of_birth"
            android:drawableStart="@drawable/ic_dateofbirth"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroupGioiTinh"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edtDateOfBirthEditInfo"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorDataofbirthEditInfo"
            style="@style/errorInputStyle"
            android:paddingStart="12dp"/>

        <EditText
            style="@style/inputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtIDStudentEditInfo"
            android:hint="@string/id_student"
            android:drawableStart="@drawable/ic_user"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/txtErrorDataofbirthEditInfo"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/edtIDStudentEditInfo"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            android:layout_width="0dp"
            style="@style/errorInputStyle"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorIDStudentEditInfo"
            android:paddingStart="12dp"/>
        <nguyenhoanganhkhoa.com.myapplication.another.CustomSpinner
            android:dropDownWidth="match_parent"
            app:layout_constraintTop_toBottomOf="@id/txtErrorIDStudentEditInfo"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:dropDownVerticalOffset = "50dp"
            android:id="@+id/spnFacultyEditInfo"
            android:background="@drawable/custom_edt"
            android:layout_marginTop="13dp"
            android:popupBackground="@drawable/spin_custom"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/spnFacultyEditInfo"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/errorInputStyle"
            android:id="@+id/txtErrorSpnFacultyEditInfo"
            android:paddingStart="12dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spnFacultyEditInfo"
            app:layout_constraintBottom_toBottomOf="@id/spnFacultyEditInfo"
            app:layout_constraintLeft_toLeftOf="@id/spnFacultyEditInfo"
            android:src="@drawable/ic_faculty"
            android:id="@+id/imvFacultyEditInfo"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/spnFacultyEditInfo"
            app:layout_constraintBottom_toBottomOf="@id/spnFacultyEditInfo"
            app:layout_constraintRight_toRightOf="@id/spnFacultyEditInfo"
            android:src="@drawable/ic_arrow_down_spinner"
            android:id="@+id/imvDropdownEditInfo"
            android:layout_marginRight="15dp"/>

        <AutoCompleteTextView
            style="@style/inputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/adtMajorsEditInfo"
            android:maxLines="2"
            android:hint="@string/major"
            android:drawableStart="@drawable/ic_major"
            app:layout_constraintTop_toBottomOf="@id/txtErrorSpnFacultyEditInfo"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            android:layout_marginTop="13dp"
            android:dropDownVerticalOffset = "7dp"
            android:popupBackground="@drawable/spin_custom"
            android:dropDownSelector="@drawable/text_custom_spin"

            />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/adtMajorsEditInfo"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/errorInputStyle"
            android:id="@+id/txtErrorMajorEditInfo"
            android:paddingStart="12dp"/>

        <EditText
            style="@style/inputStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhoneEditInfo"
            android:hint="@string/phone2"
            android:drawableStart="@drawable/ic_phone"
            android:paddingStart="20dp"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@id/txtErrorMajorEditInfo"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            />
        <TextView
            style="@style/errorInputStyle"
            app:layout_constraintTop_toBottomOf="@id/edtPhoneEditInfo"
            app:layout_constraintRight_toRightOf="@id/gRight7"
            app:layout_constraintLeft_toLeftOf="@id/gLeft7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtErrorPhoneEditInfo"
            android:paddingStart="12dp"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonYellow"
            app:layout_constraintTop_toBottomOf="@id/txtErrorPhoneEditInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:id="@+id/btnSaveEditInfo"
            android:text="@string/save" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
