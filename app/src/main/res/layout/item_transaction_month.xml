<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lnItemMonthTrans">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:text="@string/oct_2021"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/blackUI"
            android:fontFamily="@font/fjalla_one_regular"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:background="@color/primary_yellow"
            android:id="@+id/txtMonthAll"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/imv"
                    android:textColor="@color/black80"
                    android:src="@drawable/ic_money_up"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/be_vietnam_regular"
                    android:text="Income"
                    android:textColor="@color/black80"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/imv"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    app:layout_constraintLeft_toRightOf="@+id/text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/fjalla_one_regular"
                    android:textColor="@color/black80"
                    android:textSize="14sp"
                    android:id="@+id/txtIncome"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="250.000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/txtIncome"
                    android:fontFamily="@font/be_vietnam_light"
                    android:textColor="@color/black80"
                    android:textSize="8sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/txtIncome"
                    android:text="VND"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/imv1"
                    android:textColor="@color/black80"
                    android:src="@drawable/ic_money_up"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/imv1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/be_vietnam_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/text1"
                    android:textSize="12sp"
                    android:textColor="@color/black80"
                    android:text="@string/expense"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    app:layout_constraintLeft_toRightOf="@+id/text1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/fjalla_one_regular"
                    android:textColor="@color/black80"
                    android:textSize="14sp"
                    android:id="@+id/txtExpense"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="40.000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/txtExpense"
                    android:fontFamily="@font/be_vietnam_light"
                    android:textColor="@color/black80"
                    android:textSize="8sp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/txtExpense"
                    android:text="VND"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:id="@+id/rcvTransactionList"
        />



</LinearLayout>