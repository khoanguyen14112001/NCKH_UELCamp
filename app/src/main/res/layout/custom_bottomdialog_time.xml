<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheet_dialog_custom">

    <TextView
        style="@style/in_BigHeaderText"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:text="Time"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txtTime"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/txtTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txtTime"
        android:src="@drawable/ic_close_bottomsheet"
        android:backgroundTint="@color/black"
        android:layout_marginEnd="18dp"
        android:id="@+id/imvClose"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txtTime"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15 seconds"
        app:layout_constraintTop_toBottomOf="@id/view"
        style="@style/in_setting_header"
        android:id="@+id/txt15seconds"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt15seconds"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30 seconds"
        app:layout_constraintTop_toBottomOf="@id/view2"
        style="@style/in_setting_header"
        android:id="@+id/txt30seconds"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt30seconds"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view3"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 minutes"
        app:layout_constraintTop_toBottomOf="@id/view3"
        style="@style/in_setting_header"
        android:id="@+id/txt1minutes"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt1minutes"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 minutes"
        app:layout_constraintTop_toBottomOf="@id/view4"
        style="@style/in_setting_header"
        android:id="@+id/txt2minutes"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt2minutes"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 minutes"
        app:layout_constraintTop_toBottomOf="@id/view5"
        style="@style/in_setting_header"
        android:id="@+id/txt5minutes"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt5minutes"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view6"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 minutes"
        app:layout_constraintTop_toBottomOf="@id/view6"
        style="@style/in_setting_header"
        android:id="@+id/txt10minutes"
        android:paddingLeft="24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/txt10minutes"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/view7"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/view7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/buttonYellow"
        android:id="@+id/btnApply"
        android:text="@string/apply"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btnApply"
        />


</androidx.constraintlayout.widget.ConstraintLayout>