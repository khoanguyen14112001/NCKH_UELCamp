<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.notification.NoResultNotificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="true"
        android:id="@+id/imvImg"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_no_result" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imvImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/be_vietnam_regular"
        android:gravity="center_horizontal"
        android:layout_marginTop="-25dp"
        android:textColor="@color/black"
        android:text="@string/no_matching_results_were_found_n_try_again"
    />
</androidx.constraintlayout.widget.ConstraintLayout>