<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:backgroundTint="@color/xamNen"
        app:cardCornerRadius="30dp"
        android:padding="30dp"
        android:elevation="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:layout_marginTop="30dp"
            android:id="@+id/layout_constraint1"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/layout">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_avatar_female"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/imvAvatarMemberDetail"

                    />
                <View
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@drawable/button_login"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/white"
                    android:id="@+id/view"
                    android:layout_marginTop="75dp"/>

                <TextView
                    android:id="@+id/txtCareerMemberDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_login"
                    android:paddingStart="7dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="7dp"
                    android:paddingBottom="5dp"
                    android:text="Business Analyst"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toBottomOf="@id/view"
                    app:layout_constraintTop_toTopOf="@id/view"
                    app:layout_constraintLeft_toLeftOf="@id/view"
                    app:layout_constraintRight_toRightOf="@id/view" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_width="match_parent"
                android:maxLines="2"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Vo Thi Tuyet Trinh"
                android:textColor="@color/black"
                android:fontFamily="@font/be_vietnam_semibold"
                android:textSize="11sp"
                android:id="@+id/txtNameMemberDetail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txtNameMemberDetail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Leader"
                android:textColor="@color/primary_yellow"
                android:fontFamily="@font/be_vietnam_regular"
                android:textSize="11sp"
                android:id="@+id/txtRoleMemberDetail"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBottom"
                app:layout_constraintTop_toBottomOf="@id/txtRoleMemberDetail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.06"
                    android:id="@+id/gLeftInfo"

                    />

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.94"
                    android:id="@+id/gRightInfo"

                    />
                <View
                    android:layout_marginTop="21dp"
                    android:layout_width="0dp"
                    android:layout_height="155dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="@+id/gRightInfo"
                    app:layout_constraintLeft_toLeftOf="@id/gLeftInfo"
                    android:background="@drawable/button_signin_google_untouch"
                    android:id="@+id/view1"
                    >
                </View>

                <View
                    android:layout_width="152dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintRight_toRightOf="@id/view1"
                    android:id="@+id/viewHide2"
                    android:background="@color/xamNen">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/personal_information"
                    android:textColor="@color/primary_yellow"
                    android:fontFamily="@font/be_vietnam_regular"
                    app:layout_constraintTop_toTopOf="@id/viewHide2"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/viewHide2"
                    app:layout_constraintLeft_toLeftOf="@id/viewHide2"
                    android:background="@color/xamNen"
                    app:layout_constraintRight_toRightOf="@id/viewHide2"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/view1"
                    app:layout_constraintLeft_toLeftOf="@id/view1"
                    app:layout_constraintRight_toRightOf="@id/view1"
                    app:layout_constraintTop_toTopOf="@id/view1">

                    <TextView
                        android:id="@+id/txtGenderMemberDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawableStartCompat="@drawable/ic_gender"
                        android:drawablePadding="16dp"
                        android:enabled="false"
                        android:fontFamily="@font/be_vietnam_light"
                        android:text="@string/female"
                        android:textColor="@color/blackUI"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtDateOfBirthMemberDetail"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtDateOfBirthMemberDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawableStartCompat="@drawable/ic_dateofbirth"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/be_vietnam_light"


                        android:text="@string/july_06_2001"
                        android:textColor="@color/blackUI"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtFacultyDetailMember"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtGenderMemberDetail" />


                    <TextView
                        android:id="@+id/txtFacultyDetailMember"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        app:drawableStartCompat="@drawable/ic_faculty"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/be_vietnam_light"

                        android:text="@string/faculty_of_information_systems"
                        android:textColor="@color/blackUI"

                        android:textSize="13sp"
                        app:layout_constraintBottom_toTopOf="@+id/txtMajorDetailMember"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtDateOfBirthMemberDetail" />

                    <TextView
                        android:id="@+id/txtMajorDetailMember"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        app:drawableStartCompat="@drawable/ic_major"
                        android:drawablePadding="16dp"
                        android:fontFamily="@font/be_vietnam_light"
                        android:text="@string/e_commerce"

                        android:textColor="@color/blackUI"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtFacultyDetailMember" />


                </androidx.constraintlayout.widget.ConstraintLayout>








            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06"
                android:id="@+id/gLeftInfo1"

                />
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94"
                android:id="@+id/gRightInfo1"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layoutBottom"
                app:layout_constraintLeft_toLeftOf="@id/gLeftInfo1"
                app:layout_constraintRight_toRightOf="@id/gRightInfo1"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintVertical_bias="0.15"
                app:layout_constraintBottom_toTopOf="@id/txtText"
                android:id="@+id/lnImage"
                >
                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_gmail"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_face"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/img_insta"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lnImage"
                app:layout_constraintRight_toRightOf="@id/gRightInfo1"
                app:layout_constraintLeft_toLeftOf="@id/gLeftInfo1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:fontFamily="@font/be_vietnam_regular"
                android:textColor="@color/blackUI"
                android:textStyle="italic"
                android:textSize="11sp"
                android:id="@+id/txtText"
                android:layout_marginBottom="20dp"
                android:text="“However, that doesn’t mean you always wake up ready to seize the day, and sometimes need a reminder that life is a great gift”"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>